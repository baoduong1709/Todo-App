
<div class="modal fade" id="updateModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">TASK</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="update_task" method="put" action="/task/update">
                <div class="modal-body">
                    <div class="container">
                        <div class="mb-3 col">
                            <label for="title" class="form-label">Title</label>
                            <input type="text" name="title" class="form-control" id="titleU">
                        </div>
                        <div class="mb-3 col">
                            <label for="description" class="form-label">Description</label>
                            <input type="text" name="description" class="form-control" id="descriptionU">
                        </div>
                        <div class="mb-3 col">
                            <label for="due_date" class="form-label">Time</label>
                            <input type="datetime-local" name="due_date" id="due_dateU" class="form-control">
                        </div>
                        <div class="mb-3 col">
                            <label for="priorityU" class="form-label">Priority</label>
                            <select id="priorityU" class="form-select" aria-label="Default select example" name="priority1">
                                <% priorityTable.forEach(priority => { %>
                                <option value="<%= priority.id %>"><%= priority.name %></option>
                                <% }); %>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="modal-footer d-flex bd-highlight">
                    <div class="me-auto bd-highlight"><button id="deleteButton" type="button" class="btn btn-danger" onclick="deleteTask()" style="left: 0;">Delete</button></div>
                    <div class="bd-highlight"><button type="button" class="btn btn-secondary" data-bs-dismiss="modal" id="closeModal">Close</button></div>
                    <div class="bd-highlight"><button type="submit" class="btn btn-primary">Save</button></div>
                </div>
            </form>
        </div>
    </div>
</div>